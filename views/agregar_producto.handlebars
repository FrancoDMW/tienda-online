<!-- views/agregar_producto.handlebars -->

<header>
    <h1>Agregar y Eliminar Productos</h1>
    <div class="divProducto">
        <a href="/" class="btn">Lista Productos</a> <!-- Enlace a los productos -->
    </div>
</header>
<main class="form-container">
    <!-- Formulario para agregar producto -->
    <div class="form">
        <h2>Agregar Nuevo Producto</h2>
        <form action="/agregar-producto" method="POST">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required><br><br>

            <label for="cantidad">Cantidad:</label>
            <input type="number" id="cantidad" name="cantidad" required><br><br>

            <label for="precio">Precio:</label>
            <input type="number" id="precio" name="precio" step="0.01" required><br><br>

            <label for="url_imagen">URL de la Imagen:</label>
            <input type="text" id="url_imagen" name="url_imagen"><br><br>

            <button type="submit">Agregar Producto</button>
        </form>
    </div>
    <!-- Formulario para eliminar producto -->
    <div class="form">
        <h2>Eliminar Producto</h2>
        <form action="/eliminar-producto" method="POST">
            <label for="nombreEliminar">Nombre del Producto:</label>
            <input type="text" id="nombreEliminar" name="nombreEliminar" required><br><br>
            <button type="submit">Eliminar Producto</button>
        </form>
    </div>
</main>
